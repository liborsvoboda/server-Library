//Displaying installation progress in WPF using Windows Installer API - GUI Markup
//Author: MSDN.WhiteKnight (https://github.com/MSDN-WhiteKnight)

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        x:Class="WpfApp1.MainWindow"
        Title="MainWindow" Height="400" Width="600"
    >

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Content="Install" HorizontalAlignment="Left"  Margin="10" 
                VerticalAlignment="Top"  Click="Button_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left"   TextWrapping="Wrap" Margin="10"
                   Text="" VerticalScrollBarVisibility="Visible"
                   VerticalAlignment="Top" Width="500.0"  Height="300"
                   Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>        

    </StackPanel>
</Window>
